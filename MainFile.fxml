// GUI Designing for the Main Window
<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="569.0" prefWidth="550.0" styleClass="background" stylesheets="@application.css" xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.MainController">
   <children>
      <HBox layoutX="24.0" layoutY="359.0" prefHeight="201.0" prefWidth="502.0">
         <children>
            <Button fx:id="music_btn" mnemonicParsing="false" onAction="#music_btn_click" prefHeight="202.0" prefWidth="251.0" stylesheets="@application.css">
               <graphic>
                  <ImageView fitHeight="196.0" fitWidth="230.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../Images/mp3icon2.jpg" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
            <Button fx:id="video_btn" mnemonicParsing="false" onAction="#video_btn_click" prefHeight="207.0" prefWidth="251.0" stylesheets="@application.css">
               <graphic>
                  <ImageView fitHeight="193.0" fitWidth="228.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../Images/videoicon1.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
         </children>
      </HBox>
      <Button layoutX="196.0" layoutY="14.0" mnemonicParsing="false" onAction="#download_music" prefHeight="26.0" prefWidth="201.0" text="Download Music ?" textFill="STEELBLUE">
         <font>
            <Font name="Comic Sans MS Bold Italic" size="15.0" />
         </font>
      </Button>
      <ImageView fitHeight="300.0" fitWidth="550.0" layoutX="25.0" layoutY="55.0" pickOnBounds="true" preserveRatio="true" AnchorPane.leftAnchor="25.0" AnchorPane.rightAnchor="25.0" AnchorPane.topAnchor="55.0">
         <image>
            <Image url="@../Images/image1.jpg" />
         </image>
      </ImageView>
   </children>
</AnchorPane>
